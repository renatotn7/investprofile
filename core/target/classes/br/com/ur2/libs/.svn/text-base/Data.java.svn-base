package br.com.ur2.libs;

import java.util.GregorianCalendar;
import java.util.Date;

/**
 * Classe com métodos utilizados para tratamento de data.
 * @author <a href="mailto:mauricio.pinheiro@gmail.com">Mauricio Costa Pinheiro</a>
 */
public class Data {

  /**
   * Cria um objeto Date baseado no calendário gregoriano.
   * @param ano número inteiro indicando o ano da data.
   * @param mes número inteiro indicando o mês da data.
   * @param dia número inteiro indicando o dia do mês da data.
   * @return um objeto Date com da data informada.
   */
  public static Date criaData(int ano, int mes, int dia)
  {
    GregorianCalendar cal = new GregorianCalendar(ano,mes,dia);
    return cal.getTime();
  }
}
